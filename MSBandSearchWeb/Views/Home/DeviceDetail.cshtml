    function LookUp() {
        // Get center of map to use to score the search results
        var query_string = {};
        var query = window.location.search.substring(1);
        var vars = query.split("&");
        if (vars.length > 0) {
            $.post('/home/lookup',
            {
                id: vars[0].substring(3)
            },
            function (data) {
                UpdateDeviceDetails(data);
            });
        }

    }

    function CleanText(text)
    {
